<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_playlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Create a new playlist"
        android:textColor="#000000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_playlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_playlist_title"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/tabColor"
        android:hint="Name"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_playlist_name"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="OK"
        android:textColor="@color/tabColor" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_playlist_name"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/btn_ok"
        android:background="?android:attr/selectableItemBackground"
        android:text="Cancel"
        android:textColor="@color/tabColor" />


</RelativeLayout>